@model FootballLeague
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add Details</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName1" class="control-label"></label>
                <input asp-for="TeamName1" class="form-control" />
                <span asp-validation-for="TeamName1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamName2" class="control-label"></label>
                <input asp-for="TeamName2" class="form-control" />
                <span asp-validation-for="TeamName2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">-Select-</option>
                    <option value="Win">Win</option>
                    <option value="Draw">Draw</option>
                </select>
                <span asp-validation-for="Status" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinningTeam" class="control-label"></label>
                <input asp-for="WinningTeam" class="form-control" />
                <span asp-validation-for="WinningTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <select asp-for="Points" class="form-control">
                    <option value="">-Select-</option>
                    <option value=4>4</option>
                    <option value=2>2</option>
                </select>
                <span asp-validation-for="Status" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}